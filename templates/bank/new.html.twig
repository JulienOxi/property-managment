{% extends 'base.html.twig' %}

{% set pageName = "Ajouter une banque" %}
{% block title %}{{pageName}}{% endblock %}
{% block pageName %}{{pageName}}{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-2xl p-6 bg-white rounded-lg shadow-lg">
            <h1 class="text-2xl font-semibold text-center text-gray-800 mb-5">{{ pageName }}</h1>

            <div class="bg-gray-50 p-4 rounded-md mb-6">
                <p class="text-gray-600">Veuillez remplir les informations ci-dessous :</p>
            </div>
                 {{ include('bank/_form.html.twig') }}
        </div>
    </div>
{% endblock %}



{% block javascripts %}
<script>

document.addEventListener("DOMContentLoaded", () => {

    const nameRegex = /^([A-Z]|[0-9]+)[-a-zA-ZÀ-ú\s]{2,100}$/;
    const emailRegex = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    const bicRegex = /^[A-Z]{4}[A-Z]{2}[A-Z0-9]{2}([A-Z0-9]{3})?$/;
    const ibanRegex = /^[A-Z]{2}\d{2}[A-Z0-9]{11,30}$/;

    validateInput('bank_name', nameRegex)
    validateInput('bank_email', emailRegex, false)
    validateInput('bank_bic', bicRegex, false)
    validateInput('bank_iban', ibanRegex, false)
});
</script>

<script>
window.addEventListener("load", () => {
    document.getElementById("menu_btn_bank").classList.add("menu-btn-active");
})
</script>
{% endblock %}