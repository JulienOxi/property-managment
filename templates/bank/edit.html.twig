{% extends 'base.html.twig' %}

{% block title %}Edit Bank{% endblock %}

{% block body %}
    <h1>Edit Bank</h1>

    {{ include('bank/_form.html.twig', {'button_label': 'Update'}) }}


{% endblock %}
{% block javascripts %}
<script>

document.addEventListener("DOMContentLoaded", () => {

    const nameRegex = /^([A-Z]|[0-9]+)[-a-zA-ZÀ-ú\s]{2,100}$/;
    const emailRegex = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    const bicRegex = /^[A-Z]{4}[A-Z]{2}[A-Z0-9]{2}([A-Z0-9]{3})?$/;
    const ibanRegex = /^[A-Z]{2}\d{2}[A-Z0-9]{11,30}$/;

    validateInput('bank_name', nameRegex)
    validateInput('bank_email', emailRegex, false)
    validateInput('bank_bic', bicRegex, false)
    validateInput('bank_iban', ibanRegex, false)
});
</script>
{% endblock %}