{% import 'form_macros.html.twig' as macros %}
{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="md:grid md:grid-cols md:gap-4">

    {{ macros.field(form.lastname, 'Nom', '') }}
    {{ macros.field(form.firstname, 'Prénom', '') }}
    {{ macros.field(form.email, 'Email', '') }}
    {{ macros.field(form.phoneNumber, 'Numéro de téléphone', '') }}

    <div class="relative flex py-5 items-center col-span-2">
    <div class="flex-grow border-t border-gray-400"></div>
    <span class="flex-shrink mx-4 text-gray-400">Info appartement</span>
    <div class="flex-grow border-t border-gray-400"></div>
    </div>

    {{ macros.field(form.rentalStartDate, 'Date d\'entrée', '') }}
    {{ macros.field(form.rentalEndDate, 'Fin de bail', '') }}

    <div class="md:col-span-2">
        {{ form_label(form.property, 'Appartement', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.property, {'attr': {'class': 'input-base', 'onchange': 'addTenant(this.value)'}})  }}
    </div>
    
</div>
    <div id="tenant" class="col-span-2 text-sm font-medium text-gray-700 place-items-center spinner">
    </div>

<div>
    <button class="mt-4 py-2 px-4 bg-blue-600 text-white font-bold rounded hover:bg-blue-700">
        {{ button_label|default('Enregistrer') }}
    </button>
    <button onclick="history.back()" class="mt-4 py-2 px-4 bg-red-600 text-white font-bold rounded hover:bg-red-700">Annuler</button>
</div>

{{ form_end(form) }}
