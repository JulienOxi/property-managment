{% extends 'base.html.twig' %}

{% set pageName = "Finance" %}

{% block title %}{{pageName}}{% endblock %}
{% block pageName %}{{pageName}}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-6 text-center md:hidden">{{pageName}}</h1>
    
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg">
            <thead>
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid At</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for financial_entry in financial_entries %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.type.value }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.category.value }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.amount }} CHF</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.description }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.createdAt ? financial_entry.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.isPaid ? '<p class="text-green-500">Yes</p>' : '<p class="text-red-500">No</p>' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ financial_entry.paidAt ? financial_entry.paidAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="{{ path('app_financial_entry_show', {'id': financial_entry.id}) }}" class="inline-block border-[1px] border-blue-500 text-blue-500 font-semibold pt-1 pb-0 px-1 rounded hover:bg-blue-200">
                               <span class="material-symbols-outlined text-sm">visibility</span> 
                            </a>
                            <a href="{{ path('app_financial_entry_edit', {'id': financial_entry.id}) }}" class="inline-block border-[1px] border-lime-500 text-lime-500 font-semibold pt-1 pb-0 px-1 rounded hover:bg-lime-200">
                               <span class="material-symbols-outlined text-sm">edit</span> 
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">No financial entries found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-center">
        <a href="{{ path('app_financial_entry_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600">Create New Financial Entry</a>
    </div>

    <div class="mt-4 flex justify-center">
        <form method="POST" action="{{ path('app_financial_entry_generate_from_property_rent') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
            <button type="submit" class="bg-lime-500 text-white px-4 py-2 rounded shadow hover:bg-lime-600">Générer par rapport aux loyers</button>
        </form>
    </div>
</div>
{% endblock %}
