        {# Alertes flash #}
            {% set flashs = {1 : 'success', 2 :'primary', 3 : 'secondary', 4 :'danger', 5 :'warning', 6 :'info', 7 :'light', 8 :'dark'} %}

            <div id="alert">
              {% for flash in flashs %}
                {% for message in app.flashes(flash) %}
                  <div class="alert alert-{{flash}} mt-3" >
                  <b>{{ message }}</b>
                  </div>
                {% endfor %}
              {% endfor %}
            </div> 

