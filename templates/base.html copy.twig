  <script>

// Fonction permettant de cacher la div avec le message flash après 3 secondes
if(document.getElementById('alert')){
    setTimeout(function(){
        document.getElementById('alert').style.display = 'none';
    }, 9000);
}

function goto(url){
    window.location.href = url;
}

// Fonction permettant de rafraichir le status de l'utilisateur toutes les 5 secondes
setInterval(() => {
    fetch('/update-user-status', { method: 'POST' });
}, 5000); // Toutes les 5 secondes

  </script>
  
