{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ property.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ property.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ property.type }}</td>
            </tr>
            <tr>
                <th>PurchasePrice</th>
                <td>{{ property.purchasePrice }}</td>
            </tr>
            <tr>
                <th>PurchaseDate</th>
                <td>{{ property.purchaseDate ? property.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MortgageRate</th>
                <td>{{ property.mortgageRate }}</td>
            </tr>
            <tr>
                <th>MortgageType</th>
                <td>{{ property.mortgageType }}</td>
            </tr>
            <tr>
                <th>MortgageEndDate</th>
                <td>{{ property.mortgageEndDate ? property.mortgageEndDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EWID</th>
                <td>{{ property.EWID }}</td>
            </tr>
            <tr>
                <th>EGID</th>
                <td>{{ property.EGID }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_property_index') }}">back to list</a>

    <a href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
