{% extends 'base.html.twig' %}

{% block title %}Liste de biens immobilier{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for property in properties %}
                <div class="bg-white shadow-md rounded-lg overflow-hidden">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold">{{ property.name }}</h2>
                        <p class="text-gray-600">{{ property.description }}</p>
                        <div class="mt-2">
                            <span class="inline-block bg-blue-200 text-blue-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded">{{ property.type }}</span>
                        </div>
                    </div>
                    <div class="bg-gray-100 p-4">
                        <ul>
                            <li><strong>Purchase Price:</strong> {{ property.purchasePrice }}</li>
                            <li><strong>Purchase Date:</strong> {{ property.purchaseDate ? property.purchaseDate|date('Y-m-d') : 'N/A' }}</li>
                            <li><strong>Mortgage Rate:</strong> {{ property.mortgageRate }}</li>
                            <li><strong>Mortgage Type:</strong> {{ property.mortgageType }}</li>
                            <li><strong>Mortgage End Date:</strong> {{ property.mortgageEndDate ? property.mortgageEndDate|date('Y-m-d') : 'N/A' }}</li>
                            <li><strong>EWID:</strong> {{ property.EWID }}</li>
                            <li><strong>EGID:</strong> {{ property.EGID }}</li>
                        </ul>
                    </div>
                    <div class="p-4 flex justify-between">
                        <a href="{{ path('app_property_show', {'id': property.id}) }}" class="inline-block bg-lime-500 text-white font-semibold py-1 px-3 rounded hover:bg-lime-600"><span class="material-symbols-outlined">visibility</span></a>
                        <a href="{{ path('app_property_edit', {'id': property.id}) }}" class="inline-block bg-teal-500 text-white font-semibold py-1 px-3 rounded hover:bg-teal-600"><span class="material-symbols-outlined">edit</span></a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center text-gray-600">
                    <p>No records found</p>
                </div>
            {% endfor %}
        </div>

        <div class="mt-6">
            <a href="{{ path('app_property_new') }}" class="inline-block bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600">Cr√©er un nouveau bien</a>
        </div>
    </div>
{% endblock %}
