<form method="post" action="{{ path('app_upload_file_delete', {'id': upload_file.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce document ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ upload_file.id) }}">
    <button class="btn"><span class="material-symbols-outlined text-base text-red-600 hover:text-red-800 {% if(bgColor is defined) %} {{ bgColor }} {% endif %}">delete</span></button>
</form>
